services:
  nginx:
    ports:
      - "127.0.0.1:8080:80"
      - "127.0.0.1:22:22"
    volumes:
      - ./nginx/default.conf:/etc/nginx/conf.d/default.conf

  php-fpm:
    volumes:
      - ./php-fpm/assets/xdebug.ini:/usr/local/etc/php/conf.d/zz-xdebug.ini

  postgres:
    ports:
      - "127.0.0.1:5432:5432"